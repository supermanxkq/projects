<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 指定国际化资源文件的baseName为messageResource -->
	<constant name="struts.custom.i18n.resources" value="message_zh_CN" />
	<!-- 设置该应用使用的解码集 -->
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.multipart.maxSize" value="9000000" />
	<package name="shop-xkq" namespace="/shop" extends="globalResult">
		<action name="shop" class="/shop/shop">
			<result name="list">/WEB-INF/pages/shop/index.jsp
			</result>
			<result name="detail">/WEB-INF/pages/shop/detail.jsp
			</result>
			<result name="paysuccess">/WEB-INF/pages/shop/success.jsp</result>
			<result name="sendsuccess">/WEB-INF/pages/shop/sendsuccess.jsp</result>
		</action>
	</package>
</struts>
