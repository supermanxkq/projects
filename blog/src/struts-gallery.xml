<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 指定国际化资源文件的baseName为messageResource -->
	<constant name="struts.custom.i18n.resources" value="message_zh_CN" />
	<!-- 设置该应用使用的解码集 -->
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.multipart.maxSize" value="9000000" />
	<package name="gallery-xkq" namespace="/gallery" extends="globalResult">
		<action name="gallery" class="/gallery/gallery">
			<result name="list">/WEB-INF/pages/gallery/index.jsp
			</result>
			<result name="query">/WEB-INF/pages/gallery/gallery.jsp
			</result>
			<result name="checkUI">/WEB-INF/pages/gallery/blog_details.jsp
			</result>
		</action>
	</package>
</struts>
